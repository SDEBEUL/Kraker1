TEST nStation
  CASE 1:  !station 1
    TEST Station{nStation}.Opdracht
     CASE part.Balk330:
        Station{nStation}.lading := part.Inbewerking;
        rDwarsbalk_Boren_5020330(wobj_BalkStation1);
     CASE part.Balk331:
        Station{nStation}.lading := part.Inbewerking;
